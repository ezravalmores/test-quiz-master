= form_for @question do |f|

  - if @question.errors.present?
    .alert.alert-danger
      - @question.errors.full_messages.each do |message|
        .message= message

  .form-group
    = f.label :question, class: 'wysihtml5'
    = f.bootsy_area :question, class: 'form-control', rows: 10

  .form-group
    = f.label :answer
    = f.text_field :answer, class: 'form-control'
  
  .content.pull-right
    = link_to "Cancel", root_path, class: "btn btn-default"
    = f.submit nil, class: 'btn btn-primary'
